{
  "extends": [
    "config:base"
  ],
  "reviewers": [
    "gstoehld"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "groupName": "dependencies",
      "excludePackageNames": ["ch.admin.bag.covidcertificate:sdk-core"]
    },
    {
      "matchPackageNames": ["ch.admin.bag.covidcertificate:sdk-core"],
      "allowedVersions": "!/.*-dev-.*/",
      "groupName": "core-sdk"
    },
    {
      "matchPackageNames": ["org.jetbrains.kotlinx:kotlinx-coroutines-core"],
      "allowedVersions": "!/.*-native-mt$/"
    }
  ],
  "schedule": [
    "before 3am on the first day of the month"
  ]
}
